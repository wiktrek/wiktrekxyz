---
import Layout from "~/layouts/Layout.astro";
const skills = `rust\ntypescript\nnextjs\nreact`;
---

<Layout title="skills - wiktrek.xyz">
  <div
    class="justify-center
    text-center
    items-center
    font-mono
    text-2xl
    pt-4
    text-ring
    overflow-x-hidden"
  >
    <p class="text-3xl text-primary">My most important skills</p>
    <ul class="text-2xl">
      {
        skills
          .replace(" ", "")
          .split("\n")
          .sort()
          .map((s) => {
            return <li>{s}</li>;
          })
      }
    </ul>
  </div>
</Layout>
