---
import type { CollectionEntry } from 'astro:content';


type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, img } = Astro.props;
let image_exists = false;
if (img !== undefined) {
	image_exists = true 
}
console.log(image_exists)
---

<html lang="en">
	<head>
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<main>
			<article>
				{image_exists && <img width={720} height={360} src={img} alt="" />}
				<h1 class="title">{title}</h1>
				{
					updatedDate && (
						<div class="last-updated-on">
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
	</body>
</html>