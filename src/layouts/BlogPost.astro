---
import type { CollectionEntry } from 'astro:content';


type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, img } = Astro.props;
let image_exists = false;
if (img !== undefined) {
	image_exists = true 
}
console.log(image_exists)
---

<!DOCTYPE html>
<html lang="en">
	<head>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>{title} - wiktrek.xyz</title>
	</head>


	<body class="bg-[#0d0a0b] text-[#FA9F42] justify-center text-center items-center">
		
		<main>
			<article>
				{image_exists && <img width={720} height={360} src={img} alt="" />}
				<h1 class=" text-3xl">{title}</h1>
				{
					updatedDate && (
						<div class="last-updated-on">

							</div>
					)
				}
				<slot />
			</article>
		</main>
	</body>
</html>